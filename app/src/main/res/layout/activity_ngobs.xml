<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/ngobrolKuyTitle"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="20dp"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhatdisplay_regular"
            android:text="Ngobrol"
            android:textColor="@color/white"
            android:textSize="20pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhatdisplay_regular"
            android:text="Kuy"
            android:textColor="@color/pink"
            android:textSize="16pt"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ngobrolKuyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="200px"
        android:layout_height="300px"
        android:layout_marginTop="40dp"
        android:src="@drawable/profile_placeholder"
        app:layout_constraintTop_toBottomOf="@id/ngobrolKuyTitle"
        tools:layout_editor_absoluteX="27dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Orang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Orang"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/profilePic"
        app:layout_constraintTop_toTopOf="@id/profilePic"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtOrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Saya Orang"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/profilePic"
        app:layout_constraintTop_toBottomOf="@id/Orang"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic2"
        android:layout_width="200px"
        android:layout_height="300px"
        android:layout_marginTop="64dp"
        android:src="@drawable/profile_placeholder"
        app:layout_constraintTop_toBottomOf="@id/Orang"
        app:layout_constraintRight_toRightOf="@id/profilePic"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:id="@+id/Bkn_Orang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Bukan Orang"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/profilePic2"
        app:layout_constraintTop_toTopOf="@id/profilePic2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtOrang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Saya Bukan Orang"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/profilePic2"
        app:layout_constraintTop_toBottomOf="@id/Bkn_Orang"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic3"
        android:layout_width="200px"
        android:layout_height="300px"
        android:layout_marginTop="64dp"
        android:src="@drawable/profile_placeholder"
        app:layout_constraintTop_toBottomOf="@id/Bkn_Orang"
        app:layout_constraintRight_toRightOf="@id/profilePic"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:id="@+id/Mungkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Mungkin Orang"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/profilePic3"
        app:layout_constraintTop_toTopOf="@id/profilePic3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtOrang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Saya Mungkin Orang"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/profilePic3"
        app:layout_constraintTop_toBottomOf="@id/Mungkin"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginLeft="92dp"
        android:gravity="right"
        android:text="Setting"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/ngobrolKuyTitle"
        app:layout_constraintTop_toTopOf="@id/ngobrolKuyTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>